<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium">

    <!--<TextView-->
        <!--android:id="@+id/app_rate_dialog_title_text"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center_horizontal"-->
        <!--android:visibility="gone"-->
        <!--tools:visibility="visible"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="18sp"-->
        <!--tools:text="" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/rating_star_0"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_border_black_24dp"/>
        <ImageView
            android:id="@+id/rating_star_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_border_black_24dp"/>
        <ImageView
            android:id="@+id/rating_star_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_border_black_24dp"/>
        <ImageView
            android:id="@+id/rating_star_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_border_black_24dp"/>
        <ImageView
            android:id="@+id/rating_star_4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_border_black_24dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/rating_dialog_comment_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rating_edittext_background"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        android:layout_marginTop="16dp"
        android:lines="5"
        android:padding="@dimen/margin_pre_medium"
        android:hint="I love this place!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/rating_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Cancel"/>

        <Button
            android:id="@+id/rating_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textAllCaps="false"
            android:text="Submit"/>
    </LinearLayout>

</LinearLayout>